    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1b2235"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="410dp"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:id="@+id/flaganimation"/>

        <ImageView
            android:layout_width="210dp"
            android:layout_height="65dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/usatabletennis"/>
    </LinearLayout>


    <ImageView
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:background="@drawable/ratingcalculatorbanneryay" />







    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="375dp"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="#56A0D3"
            android:layout_marginLeft="15dp"
            android:layout_width="175dp"
            android:layout_height="45dp"
            android:text="Enter Initial Rating"/>
        <EditText
            android:background="@drawable/rounded_edittext"
            android:layout_width="100dp"
            android:height="50dp"
            android:maxLength="4"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:id="@+id/initialRating"
            android:inputType="number"
            android:textSize="5pt"/>
    </LinearLayout>







