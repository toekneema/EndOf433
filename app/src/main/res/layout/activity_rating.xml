    </LinearLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_below="@+id/customview"
        android:onClick="goBack"
        android:background="@drawable/roundshapebtn"
        android:text="Back"
        tools:layout_editor_absoluteX="16dp"
